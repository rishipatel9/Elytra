generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StudentInformation {
  id                    Int      @id @default(autoincrement())
  name                  String
  email                 String   @unique
  phone                 String
  age                   Int
  nationality           String
  previousDegree        String
  grades                String
  currentEducationLevel String
  preferredCountries    String
  preferredPrograms     String
  careerAspirations     String
  visaQuestions         String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  image                 String?
}

model Program {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  mode        String
  duration    String
  category    String
  fees        String
  eligibility String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
